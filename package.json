{
  "name": "certivo-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/shared-types"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm:dev --workspace apps/api\" \"npm:dev --workspace apps/web\"",
    "dev:backend": "npm run dev --workspace apps/api",
    "dev:frontend": "npm run dev --workspace apps/web",
    "build": "npm -w apps/api run build && npm -w apps/web run build",
    "test": "npm -w apps/api test && npm -w apps/web test"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
